<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/grid_margin"
    android:paddingBottom="@dimen/grid_margin">

    <TextView
        android:id="@+id/diff_header_view_from_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subheader"
        android:textColor="@color/dark_red"
        android:textStyle="bold"
        tools:text="a.txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/diff_header_view_to_textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/diff_header_view_to_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subheader"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        tools:text="b.txt"
        app:layout_constraintBottom_toBottomOf="@id/diff_header_view_from_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diff_header_view_from_textview" />

